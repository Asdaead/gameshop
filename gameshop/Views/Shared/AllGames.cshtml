@model Game

    <div class="col-lg-4">
        <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" width="200" height="200" />
        <h2>
        <a style="color:black" asp-controller="Games" asp-action="Details" asp-route-id="@Model.ID">@Model.Name</a>
        </h2>
        <p>@Model.ShortDesc</p>
        <p>Цена: @Model.Price.ToString("c")</p>
        <p>
            @if (Model.Avalible)
            {
            <a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.ID">Добавить в корзину</a>
            }
            else 
            {
                <a class="btn" style="background-color: gray;">Нет в наличии</a>
            }
        </p>
    </div>