@model ShopCartViewModel
<div class="container">
    @foreach (var el in Model.shopCart.ListShopItems)
    {
    <div class="alert alert-warning mt-3">
        <b>Игра: </b> @el.Game.Name<br />
        @if (el.Game.Avalible)
        {
            <b>Цена: </b> @el.Game.Price<br />
        } else
        {
            <b>Игра недоступна для покупки</b>
        }

        </div> 
    }
    <hr />
    <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">
        Оплатить
    </a>
</div>

