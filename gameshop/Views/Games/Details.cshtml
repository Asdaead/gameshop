@using gameshop.ViewModels
@model DetailsViewModel


<h1>
    @Model.Game.Name
</h1>
<img class="img-thumbnail" src="@Model.Game.Img" alt="@Model.Game.Name" width="300" height="300" />
<div class="col-md-4 p-3 p-md-5 bg-light border border-white">
    <h3>Описание</h3>
    @Model.Game.LongDesc
</div>
@if (Model.Game.Avalible)
{
    <a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.Game.ID">Добавить в корзину</a>
}
else
{
    <a class="btn" style="background-color: gray;">Нет в наличии</a>
}
